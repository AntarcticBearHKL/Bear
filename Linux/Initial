#/bin/bash
rm /etc/apt/sources.list
cp /Bear/Documents/SpeedUp/APT /etc/apt/sources.list

echo python='"python3"'>>~/.bashrc
echo PATH=$PATH:/Bear/Linux>>~/.bashrc

apt remove vim-common
apt install vim

apt install python3
apt install python3-pip
git clone https://github.com/AntarcticBearHKL/PyBear.git /usr/lib/python3/dist-packages/PyBear

tar -xvf /Bear/File/Talib/talib.tar.gz -C /Bear/File/Talib
/Bear/File/Talib/ta-lib/configure --prefix=/usr
cd /Bear/File/Talib/ta-lib
make
make install
rm -rf /Bear/File/Talib/ta-lib/ta-lib

pip3 install --upgrade pip
pip3 install TA-lib
pip3 install scikit-learn
pip3 install statsmodels
pip3 install pymysql
pip3 install pyecharts
pip3 install tushare
pip3 install requests-html
pip3 install scipy
pip3 install python-dateutil
pip3 install tornado
pip3 install wxpy
pip3 install cryptography
pip3 install talib
pip3 install pymongo
pip3 install redis
pip3 install pycryptodome
pip3 install jieba
pip3 install nltk